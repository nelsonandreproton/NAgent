# Google API Credentials
# Download credentials.json from Google Cloud Console and place in credentials/ directory
GOOGLE_CREDENTIALS_PATH=credentials/credentials.json

# Ollama Configuration
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=gemma2:2b

# Gmail Configuration
GMAIL_USER_ID=me
# Maximum number of unread emails to process
GMAIL_MAX_RESULTS=50

# Calendar Configuration
# Primary calendar ID (usually your email address)
CALENDAR_ID=primary

# Scheduling Configuration
DAILY_SUMMARY_TIME=09:00
TIMEZONE=UTC

# Output Configuration
OUTPUT_FORMAT=json
# Options: json, text, html
SUMMARY_LENGTH=medium
# Options: brief, medium, detailed

# Telegram Configuration
# Enable Telegram notifications (true/false)
TELEGRAM_ENABLED=true
# Telegram bot token from @BotFather
TELEGRAM_BOT_TOKEN=token_here
# Your Telegram chat ID (get from @userinfobot)
TELEGRAM_CHAT_ID=id_here

# Logging Configuration
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR